
<div class="custom-header">
  <div class="header-inner {% if section.settings.section-full-width == true %} header-full-width {% else %} header-container-sec {% endif %}">
    <!-- Hamburger (mobile only) -->
    <div class="hamburger" onclick="document.querySelector('.mobile-menu').classList.add('open')">
      <span></span><span></span><span></span>
    </div>

    <!-- Logo -->
    <div class="header-logo">
      {% if section.settings.logo_img != blank %}
        <img src="{{ section.settings.logo_img | image_url: width: 150 }}" alt="Logo">
      {% endif %}
    </div>

    <!-- Desktop Text -->
    <div class="header-text desktop-only" style="font-size: {{ section.settings.text_size }}px; color: {{ section.settings.text_color }};">
      {{ section.settings.header_text }}
    </div>

    <!-- Desktop Button -->
    <div class="header-button desktop-only">
      {% if section.settings.button_text != blank %}
        <a href="{{ section.settings.button_link }}" 
           style="background-color: {{ section.settings.button_bg }};
                  color: {{ section.settings.button_text_color }};
                  font-size: {{ section.settings.button_font_size }}px;
                  padding: 10px 20px;
                  border-radius: 4px;
                  text-decoration: none;
                  font-weight: bold;
                  display: inline-block;">
          {{ section.settings.button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</div>

<!-- Mobile Menu -->
<div class="mobile-menu">
  <div class="menu-header">
    <div class="close-menu" onclick="document.querySelector('.mobile-menu').classList.remove('open')">&times;</div>
  </div>
  <div class="menu-inner">
    <div class="menu-text" style="font-size: {{ section.settings.text_size }}px;">
      {{ section.settings.header_text }}
    </div>
    {% if section.settings.button_text != blank %}
      <a class="menu-btn"
         href="{{ section.settings.button_link }}" 
         style="background-color: {{ section.settings.button_bg }};
                color: {{ section.settings.button_text_color }};
                font-size: {{ section.settings.button_font_size }}px;">
        {{ section.settings.button_text }}
      </a>
    {% endif %}
  </div>
</div>

<style>
/* Base */
.custom-header {
  width: 100%;
  background: #F7F7F7;
  position: relative;
  z-index: 20;
}
.header-full-width{
  width:100%;
  padding: {{ section.settings.header-padding-y }}px {{ section.settings.header-padding-x }}px !important;
}
.header-container-sec{
  max-width:1440px;
  margin: 0px auto;
   padding: {{ section.settings.header-padding-y }}px {{ section.settings.header-padding-x }}px !important;
}
.custom-header .header-inner {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.header-logo img {
  max-height: 40px;
}

/* Desktop only */
.desktop-only {
  display: block;
}
.hamburger {
  display: none;
}
.mobile-menu{
  display:none;
}
.header-button a:hover {
  color: #fff !important;
  background-color: #000 !important;
}
/* Mobile styles */
@media(max-width: 992px) {
  .desktop-only {
    display: none !important;
  }

  .header-inner {
    justify-content: center;
    position: relative;
  }

  .hamburger {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    width: 24px;
    height: 18px;
    position: absolute;
    left: 20px;
    cursor: pointer;
  }
  .hamburger span {
    display: block;
    height: 3px;
    background: #000;
    border-radius: 2px;
  }
  .mobile-menu {
      display: block;
  }
  /* Slide-in Menu */
  .mobile-menu {
    position: fixed;
    top: 0;
    left: -250px;
    width: 250px;
    height: 100%;
    background: #fff;
    box-shadow: 2px 0 5px rgba(0,0,0,.2);
    transition: left 0.3s ease;
    z-index: 9999;
    padding: 20px;
  }
  .mobile-menu.open {
    left: 0;
  }

  .mobile-menu .menu-header {
    display: flex;
    justify-content: flex-end;
  }
  .mobile-menu .close-menu {
    font-size: 28px;
    cursor: pointer;
    line-height: 1;
  }

  .mobile-menu .menu-inner {
    display: flex;
    flex-direction: column;
    gap: 20px;
    margin-top: 30px;
  }
  .mobile-menu .menu-btn {
    padding: 10px 20px;
    border-radius: 4px;
    font-weight: bold;
    text-align: center;
    text-decoration: none;
  }
  .custom-header .header-logo {
    width: 100%;
    text-align: center;
  }
}
</style>

{% schema %}
{
  "name": "Custom Header",
  "settings": [
     {
      "type": "checkbox",
      "id": "section-full-width",
      "default": true,
      "label": "Section Full Width"
    },
    {
      "type": "image_picker",
      "id": "logo_img",
      "label": "Logo Image"
    },
    {
      "type": "text",
      "id": "header_text",
      "label": "Header Text",
      "default": "Find the ideal gift for your loved ones."
    },
    {
      "type": "range",
      "id": "text_size",
      "label": "Text Font Size",
      "min": 12,
      "max": 40,
      "step": 1,
      "unit": "px",
      "default": 16
    },
     {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "CHOOSE GIFT"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "color",
      "id": "button_bg",
      "label": "Button Background Color",
      "default": "#FFD500"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button Text Color",
      "default": "#000000"
    },
    {
      "type": "range",
      "id": "button_font_size",
      "label": "Button Font Size",
      "min": 12,
      "max": 30,
      "step": 1,
      "unit": "px",
      "default": 14
    },
     {
        "type": "range",
        "id": "header-padding-x",
        "min": 12,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Section Padding X(px)",
        "default": 20
    },
     {
        "type": "range",
        "id": "header-padding-y",
        "min": 12,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Section Padding Y(px)",
        "default": 50
    },
  ],
   "presets": [
    {
      "name": "Custom Banner",
      "category": "Custom"
    }
  ]
}
{% endschema %}